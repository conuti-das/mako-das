{% extends 'admin/base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">User List</h3>
                    </div>
                    <div class>
                        <div class="card-body">
                            <div class="">
                                <table id="table_id" class="table table-striped table-bordered text-nowrap w-100">
                                    <thead class="thead-light">
                                    <tr>
                                        <th class="wd-15p">Id</th>
                                        <th class="wd-15p">Username</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.username }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script defer src="{{ asset('assets/app/js/certificate.js' ~ asset_version) }}"></script>
    {% endblock %}
{% endblock %}
