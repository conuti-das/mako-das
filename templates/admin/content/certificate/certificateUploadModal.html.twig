<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            {{ form_start(modalCertificateForm) }}

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'Upload Certificate'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>

            <div class="modal-body">

                <div id="uploadCertErrorMessage" class="alert alert-danger d-none" role="alert"></div>

                <div>
                     <div class="form-group partner_inp">
                        <div class="form-group-label">
                            <label for="certificate_form_partnerId" class="required">{{ 'Partner Id'|trans }}</label>
                        </div>
                        <div>
                            {{ form_widget(modalCertificateForm.partnerId) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group-label">
                            <label>{{ 'Upload File'|trans }}</label>
                        </div>
                        <div>
                            {{ form_widget(modalCertificateForm.uploadFile) }}
                        </div>
                    </div>
                    <div id="certificate-information" class="d-none">
                        <ul id="list-cert-information" class="list-group list-group-flush">

                            <li class="list-group-item">
                                <b>{{ 'Active'|trans }}:</b>
                                <span id="certificate_form_isActive"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Active Until'|trans }}:</b>
                                <span id="certificate_form_validFrom_hidden"></span>
                                {{ form_widget(modalCertificateForm.validFrom) }}
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Active Until'|trans }}:</b>
                                <span id="certificate_form_validUntil_hidden"></span>
                                {{ form_widget(modalCertificateForm.validUntil) }}
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Issuer Name'|trans }}:</b>
                                <span id="certificate_form_issuerName"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Name'|trans }}:</b>
                                <span id="certificate_form_name"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Email'|trans }}:</b>
                                <span id="certificate_form_email_hidden"></span>
                                {{ form_widget(modalCertificateForm.email) }}
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Hash'|trans }}:</b>
                                <span id="certificate_form_hash"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Issuer Country'|trans }}:</b>
                                <span id="certificate_form_issuerCountry"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Issuer Organisation'|trans }}:</b>
                                <span id="certificate_form_issuerOrganisation"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Issuer Organisation Unit'|trans }}:</b>
                                <span id="certificate_form_issuerOrganisationUnit"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Serial Number'|trans }}:</b>
                                <span id="certificate_form_serialNumber"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Subject Country'|trans }}:</b>
                                <span id="certificate_form_subjectCountry"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Subject Location'|trans }}:</b>
                                <span id="certificate_form_subjectLocation"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Subject Name'|trans }}:</b>
                                <span id="certificate_form_subjectName"></span>
                            </li>

                            <li class="list-group-item">
                                <b>{{ 'Subject Organisation'|trans }}:</b>
                                <span id="certificate_form_subjectOrganisation"></span>
                            </li>
                        </ul>
                        {{ form_widget(modalCertificateForm.certificateFile) }}
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancel-upload"
                        data-dismiss="modal">{{ 'Cancel'|trans }} </button>
                <button type="submit" id="save-disable" class="btn btn-primary">{{ 'Save'|trans }} </button>
            </div>

            {{ form_end(modalCertificateForm) }}

        </div>
    </div>
</div>
